@{
  Layout = "_Layout";
}

@model Library.Models.Author

<h4>Add a new Author:</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model=>model.Name)
  @Html.TextBoxFor(model=>model.Name)
  <hr />
  @Html.LabelFor(model=>model.Specialty)
  @Html.TextBoxFor(model=>model.Specialty)
  <hr />
  @Html.Label("Select Book:")
  @Html.DropDownList("BookId")

  <input type="submit" value="Add new Author" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Authors", "Index")</p>